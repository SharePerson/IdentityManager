@model ForgotPasswordViewModel

@{
    ViewBag.Title = "Forgot Password";
}

<h1 class="text-info">Forgot Password</h1>
<form asp-controller="Account" asp-action="ForgotPassword" method="post" role="form">
    <h4>Forgot my password</h4>
    <hr />
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Email" class="col-md-2"></label>
        <div class="col-md-10">
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="offset-md-8 col-md-2">
            <button type="submit" class="btn btn-success form-control">Forgot Password</button>
        </div>
    </div>
    <p>
        <a asp-action="register">Register as a new user?</a>
    </p>
    <p>
        <a asp-action="Login">Login with an existing account</a>
    </p>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
} 
@model VerifyAuthenticatorViewModel

<h1>Verify Authenticator Code</h1>

<form asp-controller="Account" asp-action="VerifyAuthenticatorCode" method="post" asp-route-ReturnUrl="@ViewData["ReturnUrl"]" role="form">
    <div asp-validation-summary="All" class="text-danger"></div>
    <input hidden asp-for="RememberMe" />
    <hr />
    <div class="form-group">
        <label asp-for="Code" class="col-md-2 "></label>
        <div class="col-md-10">
            <input asp-for="Code" class="form-control" />
            <span asp-validation-for="Code" class="text-danger"></span>
        </div>
    </div>
    <button type="submit" class="btn btn-primary float-right">Submit Code</button>
</form>


@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
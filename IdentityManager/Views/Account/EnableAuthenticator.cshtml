@model TwoFactorAuthenticationViewModel

<p>
    Enter Code from Authenticator App:
</p>

<p>
    @Model.Token
</p>

<div class="row">
    <div class="col-6">
        <form method="post">
            <input hidden asp-for="Token" />
            <div class="form-group">
                Enter Code: <input type="text" class="form-control" asp-for="Code" />
            </div>

            <button type="submit" class="btn btn-primary">Submit Code</button>
        </form>
    </div>
    <div class="col-6">
        <h2>Using QR Code</h2>
        <div id="qrCode"></div>
    </div>
</div>

@section Scripts {
    <script type="text/javascript" src="~/js/qrcode.min.js"></script>
    <script type="text/javascript">
        new QRCode(document.getElementById('qrCode'), "@Model.QrCodeUrl");
    </script>
}
